<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://canvasBrowse.caption"
        focusComponent="canvasesTable">
    <data readOnly="true">
        <collection id="canvasesDc"
                    class="com.company.content.entity.Canvas">
            <fetchPlan extends="_base"/>
            <loader id="canvasesDl">
                <query>
                    <![CDATA[select e from content_Canvas e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet"
                        auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="canvasesTable"
            spacing="true">
        <filter id="filter"
                collapsed="true"
                dataLoader="canvasesDl">
            <properties include=".*"/>
            <configurations>
                <configuration id="nameConfig"
                               default="true"
                               name="msg://filter.name">
                    <propertyFilter property="name"
                                    operation="CONTAINS"
                                    operationEditable="true"/>
                </configuration>
            </configurations>
        </filter>
        <groupTable id="canvasesTable"
                    width="100%"
                    dataContainer="canvasesDc">
            <actions>
                <action id="create"
                        type="create"/>
                <action id="edit"
                        type="edit"/>
                <action id="remove"
                        type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="width"/>
                <column id="texture"/>
                <column id="color"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="canvasesTable.create"/>
                <button id="editBtn"
                        action="canvasesTable.edit"/>
                <button id="removeBtn"
                        action="canvasesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions"
              spacing="true"
              visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
