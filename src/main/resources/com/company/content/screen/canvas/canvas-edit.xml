<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://canvasEdit.caption"
        focusComponent="form">
    <data>
        <instance id="canvasDc"
                  class="com.company.content.entity.Canvas">
            <fetchPlan extends="_base"/>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet"
                        auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose"
                caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode modal="true"
                forceDialog="true"
                height="AUTO"
                width="AUTO"/>
    <layout spacing="true"
            expand="editActions">
        <form id="form"
              dataContainer="canvasDc">
            <column width="350px">
                <textField id="nameField"
                           property="name"/>
                <textField id="widthField"
                           property="width"/>
                <comboBox id="textureField"
                          property="texture"/>
                <colorPicker id="colorField"
                             rgbVisible="true"
                             hsvVisible="true"
                             swatchesVisible="true"
                             defaultCaptionEnabled="true"
                             property="color"/>
            </column>
        </form>
        <hbox id="editActions"
              spacing="true">
            <button id="commitAndCloseBtn"
                    action="windowCommitAndClose"/>
            <button id="closeBtn"
                    action="windowClose"/>
        </hbox>
    </layout>
</window>
