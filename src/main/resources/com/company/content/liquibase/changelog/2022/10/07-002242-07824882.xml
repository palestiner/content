<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1"
               author="content">
        <addColumn tableName="CONTENT_NOMENCLATURE">
            <column name="CATEGORY"
                    type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="2"
               author="content">
        <dropForeignKeyConstraint baseTableName="CONTENT_NOMENCLATURE"
                                  constraintName="FK_CONTENT_NOMENCLATURE_ON_CATEGORY"/>
    </changeSet>
    <changeSet id="3"
               author="content">
        <addForeignKeyConstraint baseColumnNames="CATEGORY"
                                 baseTableName="CONTENT_NOMENCLATURE"
                                 constraintName="FK_CONTENT_NOMENCLATURE_ON_CATEGORY"
                                 onDelete="SET NULL"
                                 referencedColumnNames="ID"
                                 referencedTableName="CONTENT_CATEGORY"/>
    </changeSet>
    <changeSet id="4"
               author="content">
        <addNotNullConstraint columnDataType="VARCHAR(255)"
                              columnName="DESCRIPTION"
                              tableName="CONTENT_NOMENCLATURE"
                              validate="true"/>
    </changeSet>
</databaseChangeLog>
